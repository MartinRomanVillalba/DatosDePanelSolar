<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos del panel solar</title>
    <link rel="stylesheet" href="/css/stylesCreate.css">
    <script>
        function confirmarEnvio(event){
            event.preventDefault()
            const confirmation = confirm("¿Desea cargar otro dato y volver a enviar?")

            if(confirmation){
                window.location.href = "/datos/create"
            }
            else{
                window.location.href = "/"
            }
        }
    </script>
</head>
<body>
    <header>
        <h1>Subida de Datos</h1>
        <a href="..">Inicio</a>
    </header>
    
    <form action="/datos/create" method="post" class="form-cuadro" onsubmit="confirmarEnvio(event)">

        <div class="seccion">
            <h2>Fecha</h2>
            <input type="date" name="fecha" id="fecha" required>

            <h2>Hora</h2>
            <select class="horas" name="horas" id="horas">
                <option value="" class="horas-select">Selecciona un horario</option>
                <% locals.horas?.forEach(horas => { %>
                    <option value="<%= horas.id %>" class="horas-select"><%= horas.hora %></option>
                <% }) %>
            </select>
        </div>
        
        <div class="seccion">
                <h2>Carga de la casa</h2>
                <label for="output">Output load %</label>
                <input type="number" name="output" id="output" required>
                <label for="output_active">AC Output Active Power(W)</label>
                <input type="number" name="output_active" id="output_active" required>
        </div>
        
        <div class="seccion">
            <h2>Batería</h2>
            <label for="voltaje">Voltaje(V)</label>
            <input type="number" name="voltaje" id="voltaje" step="0.01" required>
            <label for="porcentaje">Porcentaje</label>
            <input type="number" name="porcentaje" id="porcentaje" required>
            <label for="charging">Charging Current(A)</label>
            <input type="number" name="charging" id="charging" required>
            <label for="discharge">Discharge Current(A)</label>
            <input type="number" name="discharge" id="discharge" required>
        </div>
        
        <div class="seccion">
            <h2>Panel FV 1(W)</h2>
            <label for="input_voltaje">Input voltaje</label>
            <input type="number" name="input_voltaje" id="input_voltaje" step="0.01" required>
            <label for="input_power">Input Power</label>
            <input type="number" name="input_power" id="input_power" required>
        </div>
        
        <div class="seccion-botones">
            <button type="submit">Enviar</button>
        </div>
    </form>

    <footer>
        <p>&copy; 2024 Martin Villalba - Axel Hurt. Todos los derechos reservados.</p>
        <a href="..">Inicio</a>
    </footer>
</body>
</html>